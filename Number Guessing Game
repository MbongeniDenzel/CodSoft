using namespace std;
int main() {
    // Write C++ code here
    int number = 50, guess;
    cin>>  guess;
    while (guess != number){
        
        if (guess == number){
          break;
            
        }else if(guess < number ){
            cout<< "Number is below the correct guess\n ";
            
        }
        else if(guess> number){
            cout<<"Number is above the correct guess\n";
            ;
            
        }
        cin >> guess;
       
    }
    cout<< "Congrats, Youve guessed correctly";

    return 0;
}.
